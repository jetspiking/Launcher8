<UserControl x:Class="Launcher8.Views.Apps"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Launcher8.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <DockPanel HorizontalAlignment="Stretch">
        <TextBox DockPanel.Dock="Top" Name="SearchBox"></TextBox>
        <ScrollViewer DockPanel.Dock="Bottom" Name="AppsScroller" HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Visible">
            <StackPanel Name="AppsGrid" HorizontalAlignment="Stretch" Orientation="Vertical">

            </StackPanel>
        </ScrollViewer>
    </DockPanel>
    
</UserControl>
